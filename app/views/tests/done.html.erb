<div class="container table-responsive">
  <h1>Tests</h1>

  <table id="datatable" class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>ID</th>
        <th>Created at</th>
        <th>Tested By</th>
        <th>Result Files</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tests.each do |test| %>
        <tr>
          <td><%= tag.b test.id %></td>
          <td><%= test.created_at.strftime('%A %-d %b %H:%M') %></td>
          <td><%= link_to test.user.email, user_path(test.user) %></td>
          <td>
            <% test.result_file.tap do |file| %>
              <%= link_to "Download #{file.filename}", rails_blob_path(file, disposition: "attachment") %>
              <br/>
            <% end  %>
          </td>
          <td>
            <%= link_to plate_path(test.plate) do  %>
              <button class="btn btn-primary">Show</button>
            <% end  %>            
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


