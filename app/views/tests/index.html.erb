<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Tests</h1>

  <table>
    <thead>
    <tr>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= link_to "Download Results", rails_blob_path(test.result_file, disposition: "attachment") %></td>
        <td><%= link_to 'Show', plate_tests_path(@plate, test) %></td>
        <td><%= link_to 'Edit', edit_plate_test_path(@plate, test) %></td>
        <td><%= link_to 'Destroy', plate_test_path(@plate, test), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Test', new_plate_test_path %>
</div>

