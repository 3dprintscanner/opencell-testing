<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Labgroups</h1>

    <table class="table table-striped table-bordered table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>No.Labs</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @labgroups.each do |labgroup| %>
            <tr>
                <td><%= labgroup.name %></td>
                <td><%= labgroup.labs.count %></td>
                <td><%= link_to 'Show', labgroup, class: 'btn btn-primary' %></td>
                <td><%= link_to 'Edit', edit_labgroup_path(labgroup), class: 'btn btn-secondary' %></td>
                <td><%= link_to 'Destroy', labgroup, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <br>

    <%= link_to 'New Labgroup', new_labgroup_path %>
</div>