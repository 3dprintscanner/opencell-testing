<div class="container table-responsive">
    <p id="notice"><%= notice %></p>

    <h1>Labgroups</h1>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>No.Labs</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @labgroups.each do |labgroup| %>
            <tr>
                <td><%= labgroup.name %></td>
                <td><%= labgroup.labs.count %></td>
                <td>
                    <div class="d-flex justify-content-end">
                        <div class="p-1">
                            <%= link_to 'Show', labgroup, class: 'btn btn-primary' %>
                        </div>
                        <div class="p-1">
                            <%= link_to 'Edit', edit_labgroup_path(labgroup), class: 'btn btn-secondary' %>
                        </div>
                        <div class="p-1">
                            <%= link_to 'Destroy', labgroup, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                        </div>
                    </div>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <br>

    <%= link_to 'New Labgroup', new_labgroup_path, class: 'btn btn-primary' %>
</div>