<div class="container">
  <h1>Plates</h1>

  <table id="datatable">
    <thead>
    <tr>
      <th> Plate</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @plates.each do |plate| %>
      <tr>
        <td><%= plate.id %></td>
        <td><%= link_to 'Show', plate %></td>
        <td><%= link_to 'Edit', edit_plate_path(plate) %></td>
        <td><%= link_to 'Destroy', plate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Plate', new_plate_path %>
</div>

