<div class="container table-responsive">
  <h1>Plates</h1>

  <table id="datatable" class="table table-striped table-bordered">
    <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>UID</th>
      <th>Status</th>
      <th>Created At</th>
      <th colspan="1"></th>
    </tr>
    </thead>

    <tbody>
    <% @plates.each do |plate| %>
      <tr>
        <td><%= plate.id %></td>
        <td><%= plate.uid %></td>
        <td><%= get_plate_badge(plate.state) %></td>
        <td><%= plate.created_at.strftime('%A %-d %b %H:%M') %></td>
        <td class="text-right">
          <%= link_to plate do  %>
            <button class="btn btn-primary">Show</button>
          <% end %>
          <%= link_to edit_plate_path(plate) do  %>
            <button class="btn btn-outline-info">Edit</button>
          <% end %>
          <%= link_to plate, method: :delete, data: { confirm: 'Are you sure?' } do  %>
            <button class="btn btn-outline-danger">Delete</button>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>

