<div class="container">
  <br>
  <div class="row">
    <div class="col-md-6 col-sm-12">
      
      <div class="card shadow">
        <div class="card-header "><h4>Newly generated API patient</h4></div>
        <div class="card-body">
          <div class="mt-1 mb-1">
            <span class="profile-icon">
              <%= fa_icon "user" %>
            </span>
            <span>
              <%= @user.name %>
            </span>
          </div>
          <div class="mt-1 mb-1 ">
            <span class="profile-icon">
              <%= fa_icon "birthday-cake" %>
            </span>
            <span>
              <%= @user.dob.strftime('%-d %b %Y') %>
            </span>
           </div>
          <div class="mt-1 mb-1 ">
            <span class="profile-icon">
              <%= fa_icon "phone" %>
            </span>
            <span>
              <%= @user.telno %>
            </span>
          </div>
          <div class="mt-1 mb-1 ">
            <span class="profile-icon">
              <%= fa_icon "envelope-open" %>
            </span>
            <span>
              <%= @user.email %>
            </span>
          </div>
          <div class="mt-1 mb-1 ">
            <span class="profile-icon">
              <%= fa_icon "key" %>
            </span>
            <span>
              <%= @api_key %>
            </span>
            <span>
              <i>One time only API key</i>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
