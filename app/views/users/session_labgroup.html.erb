<div class="container col-md-4 col-sm-6 col-sm-offset-3">
    <h2>Set Labgroup and Lab</h2>
    <%= form_tag(session_labgroup_set_users_path, method: :post, class: 'was-validated') do |f| %>
        <div class="form-group">
            <%= label_tag :labgroup %>
            <%= collection_select :ss, :labgroup, current_user.labgroups, :id, :name, {selected: @session_location[:labgroup], include_blank: true }, class: 'was-validated form-control custom-select', required: true %>
            <div class="valid-feedback">Valid.</div>
            <div class="invalid-feedback">Please select your working labgroup.</div>
        </div>
        <%= submit_tag "Submit", class: 'btn btn-primary'%>
    <% end %>
</div>