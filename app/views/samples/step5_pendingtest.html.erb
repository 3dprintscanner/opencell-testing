<div class="container table-responsive">

  <br>
  <h1>Start qPCR</h1>
  <br>

  <%= form_for :plates , url: step5_sample_bulk_tested_path do |f| %>
    <table id="datatable" class="table table-striped table-bordered">
      <thead class="thead-dark">
      <tr>
        <th class="no-sort" width="25"><!-- check_box_tag--></th>
        <th>Plate</th>
        <th>Uid</th>
        <th class="no-sort">State</th>
        <th class="no-sort">Updated At</th>
      </tr>
      </thead>
      <tbody>
      <% @plates.each do |plate| %>
        <tr>
          <td class="text-center" style="font-size: 2em; padding-top: 5px"><%= check_box_tag  'plates[][id]', plate.id %></td>
          <td><%= link_to "Plate ##{plate.id}", plate %></td>
          <td><%= plate.uid %></td>
          <td><%= get_plate_badge(plate.state) %></td>
          <td><%= plate.updated_at.strftime('%a %d %b %H:%M') %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <div class="actions">
      <%= f.submit "Run Test", :class => 'btn btn-primary' %>
    </div>
  <% end %>

</div>