<div class="container">
  <br>
    
  <p id="notice"><%= notice %></p>

  <h1>Samples</h1>
  <table id="datatable" class="table table-striped">
    <thead class="thead-dark">
    <tr>
      <th>Id</th>
      <th>UID</th>
      <th>State</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
    </thead>
    <tbody>
    <% @samples.each do |sample| %>
      <tr>
        <td><%= link_to sample.id, sample %></td>
        <td><%= sample.uid %></td>
        <td class="text-center"><%= get_badge(sample.state) %></td>
        <td class="text-right"><%= sample.created_at.strftime('%a %d %b %H:%M') %></td>
        <td class="text-right"><%= sample.updated_at.strftime('%a %d %b %H:%M') %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <br>
</div>