<table id="samples-datatable" class="table table-striped" data-source="<%= path %>">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>UID</th>
            <th>State</th>
            <th>Created At</th>
            <th>Updated At</th>
            <th colspan="1"></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    $('#samples-datatable').dataTable({
        "processing": true,
        "serverSide": true,
        "ajax": {
            "url": $('#samples-datatable').data('source')
        },
        "pagingType": "full_numbers",
        "columns": [{
                "data": "id"
            },
            {
                "data": "uid"
            },
            {
                "data": "state"
            },
            {
                "data": "created_at"
            },
            {
                "data": "updated_at"
            },
            {
                "data": "link"
            }
        ]
        // pagingType is optional, if you want full pagination controls.
        // Check dataTables documentation to learn more about
        // available options.
    });
</script>