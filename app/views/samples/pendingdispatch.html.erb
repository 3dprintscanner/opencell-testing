<h1>Samples Pending Dispatch</h1>
<div class="container">
  <table class="table table-striped">
    <thead>
    <tr>
      <th>User</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @samples.each do |sample| %>
      <tr>
        <td><%= sample.user.name %></td>
        <td><%= sample.state %></td>
        <td><%= link_to 'Mark As Dispatched', sample_ship_path(sample), method: :post %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
