<div class="container">

  <br>
  <h1>Upload Test Results</h1>
  <br>

    <table id="datatable" class="table table-striped table-bordered">
      <thead class="thead-dark">
      <tr>
        <th>Plate</th>
        <th>Uid</th>
        <th>Results</th>
        <th>Updated At</th>
      </tr>
      </thead>
      <tbody>
      <% @plates.each do |plate| %>
        <tr>
          <td>
            <%= link_to "Plate ##{plate.id}", plate %>
          </td>
          <td><%= plate.uid %></td>
          <td>
            <%= link_to new_plate_test_path(plate) do  %>
              <%= tag.button class: 'btn btn-small btn-outline-primary' do  %>
                Upload
              <% end  %>
            <% end  %>
          </td>
          <td class="text-right">
            <%= plate.updated_at.strftime('%a %d %b %H:%M') %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>

</div>