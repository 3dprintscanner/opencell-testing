<div class="container table-responsive">
  <h1>Labs</h1>

  <table class="table table-striped table-bordered">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @labs.each do |lab| %>
        <tr>
          <td><%= lab.name %></td>
          <td>
            <div class="d-flex justify-content-end">
              <div class="p-1">
                <%= link_to 'Show', lab, class: 'btn btn-primary' %>
              </div>
              <div class="p-1">
                <%= link_to 'Edit', edit_lab_path(lab), class: 'btn btn-secondary' %>
              </div>
              <div class="p-1">
                <%= link_to 'Destroy', lab, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Lab', new_lab_path %>
</div>